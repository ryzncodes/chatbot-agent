# Backend environment template

OPENAI_API_KEY=
EMBEDDING_MODEL=text-embedding-3-large
SQLITE_PATH=../db/conversations.db
OUTLETS_DB_PATH=../db/outlets.db
FAISS_INDEX_PATH=../db/faiss/products.index
PRODUCTS_METADATA_PATH=../db/faiss/products_metadata.json
OPENROUTER_API_KEY=
OPENROUTER_MODEL=minimax/minimax-m2:free
OPENROUTER_REFERER=http://localhost:5173
OPENROUTER_TITLE=ZUS AI Assistant
OPENROUTER_RATE_LIMIT_PER_SEC=1.0
CALCULATOR_TIMEOUT_MS=2000
LOG_LEVEL=INFO
FRONTEND_ORIGIN=http://localhost:5173

# Optional environment markers and advanced CORS
ENVIRONMENT=local
# Additional allowed CORS origins (JSON array). Example: ["https://preview.example.com"]
ADDITIONAL_ORIGINS=[]

# Optional debug token enabling protected /debug endpoints when provided via ?token=...
DEBUG_TOKEN=

# --- API rate limiting (in-memory) -------------------------------------------
# Enable or disable the in-app rate limiter.
RATE_LIMIT_ENABLED=true
# Requests per minute per IP when unauthenticated.
RATE_LIMIT_UNAUTH_PER_MINUTE=60
# Requests per minute per user when authenticated (X-User-ID provided).
RATE_LIMIT_AUTH_PER_MINUTE=300
# Short burst allowance per second to smooth traffic.
RATE_LIMIT_BURST_PER_SECOND=10
# JSON list of paths to exempt. Supports suffix wildcard '/*' for prefix matches.
RATE_LIMIT_EXEMPT_PATHS=["/health","/metrics","/tools/*"]
